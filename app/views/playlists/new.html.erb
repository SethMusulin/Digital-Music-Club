<div class="playlist-create">Give Good Playlist</div>

<%= form_for @playlist, html: {class: "song-form"} do |f| %>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.fields_for :songs do |builder| %>
        <%= render "song_fields", f: builder %>
    <% end %>


    <%= link_to_add_fields "Add Song", f, :songs %>
    <%= f.submit "That's my cut" %>
<% end %>


